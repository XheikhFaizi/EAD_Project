@{
	ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model NET_QR.Models.User;

<br />
<br />
<br />
<br />
<br />

<style>

body
{
	background:#eef5ff;
}
</style>


<div class="container">
      <div class="row">
 
        <div class="col-lg-4">

        </div>

        <div class="col-lg-4">

<div class="container" >
	<div class="screen">
		<div class="screen__content">
		
			
			<form class="login" method="post"action="/Users/signup">
		
				   @Html.ValidationSummary(true, "", new { @class = "text-danger" })

				       @if (ViewBag.Message != null)
						{
							<p class = "text-danger"><b> @ViewBag.Message</b></p>
						
						
						}
   
				<div class="login__field">
					<i class="login__icon fas fa-user"></i>
					<input type="text" class="login__input" placeholder="Name"  id="name" name="name">
					<br>
					@Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
				</div>

				<div class="login__field">
					<i class="login__icon 	far fa-id-card"></i>
					<input type="text" class="login__input" placeholder="Username"  id="username" name="username">
					<br>
					@Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
				</div>

				<div class="login__field">
					<i class="login__icon fas fa-envelope"></i>
					<input type="text" class="login__input" placeholder="Email"  id="email" name="email">
					<br>
					@Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
				</div>



				<div class="login__field">
					<i class="login__icon fas fa-lock"></i>
					<input type="password" class="login__input" placeholder="Password"  id="pass" name="pass">
					<br>
					@Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
				</div>

				<div class="login__field">
					<i class="login__icon fas fa-lock"></i>
					<input type="password" class="login__input" placeholder="Confirm Password"  id="confpass" name="confpass">
					<br>
					@Html.ValidationMessageFor(model => model.confpass, "", new { @class = "text-danger" })
				</div>

				
				<button class="button login__submit">
				
					<span class="button__text"  type="submit" value="Sign Up Now">Sign Up Now</span>
					<i class="button__icon fas fa-chevron-right"></i>
				</button>	
				
			</form>
			



		</div>
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>		
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>		

</div>
          </div>
        </div>
      
      </div>
    </div>
	
<br />
<br />




  <style>

.screen {		
	background-color:  #00bfff;	
	position: relative;	
